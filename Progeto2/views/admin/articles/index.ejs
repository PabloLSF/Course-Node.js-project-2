<%- include('../../partial/header.ejs'); %>
<%- include('../../partial/navbar.ejs'); %>


<div class="container">
  <hr>
  <h2>ARTIGOS</h2>
  <a class="btn btn-dark" href="/admin/articles/new">Criar nova artigos</a>
  <hr>
  <table class="table table-bordered" >
    <thead>
      <tr>
        <th>ID</th>
        <th>Titulo</th>
        <th>Slug</th>
        <th>Categoria</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
<% articles.forEach(articles=>{%>
  <tr>

  <th><%=articles.id%></th>
  <th><%=articles.title%></th>
  <th><%=articles.slug%></th>
  <th><%=articles.category.title%></th>
  <th>
    <a href="/admin/articles/edit/<%=articles.id%>" class="btn btn-warning">Editar</a>  
    <form method="POST" action="/articles/delete" style="display: inline;" onsubmit="confirmarDelecao(event,this)">
      <input type="hidden" name="id" value="<%= articles.id %>">
        <button class="btn btn-danger">Deletar</button>
    </form>
  </th>
  </tr>
<%})%>



    </tbody>

  </table>
  </div>


<%- include('../../partial/footer.ejs'); %>
<script type="text/javascript">

    function confirmarDelecao(event,form){
    event.preventDefault();
    var decision = confirm("Você quer deletar esata artigo?");
    if(decision){
      form.submit();
    }
  }
</script>
