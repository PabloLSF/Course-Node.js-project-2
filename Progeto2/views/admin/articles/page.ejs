<%- include('../../partial/header.ejs'); %>
<%- include('../../partial/homenavbar.ejs'); %>
<body>
<div class="container">

  <hr>
  <% result.articles.rows.forEach(articles=>{%>
    <div class="card">
      <div class="card-header">
        <h2><%= articles.title%></h2>
      </div>
      <div class="card-body">
        <a href="/<%=articles.slug%>" class="btn btn-dark">Ler Artigo</a>

      </div>

    </div>


  <%})%>
  <div class="row">
    <div class="col col-12">
      <% if(result.page>2){%>
          <a style="float:left" href="/articles/page/<%=result.page-1%>"> <<< prev </a>
      <%}else{%>
        <a style="float:left" href="/"> <<< prev </a>

        <%}%>
<% if(result.next){%>
    <a style="float:right" href="/articles/page/<%=result.page+1%>">next >>></a>
<%}%>
    <hr>
</div>
  </div>
  <hr>

</div>
</body>
